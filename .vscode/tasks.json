{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake Build",
            "windows": {
                "command": "CMake -DCMAKE_BUILD_TYPE=Debug .."
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "shell",
            "label": "MSBuild",
            "windows": {
                "command": "msbuild",
                "args": [
                    "TestEtna.sln",
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}